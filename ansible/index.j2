<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Portfolio — {{ owner_name }}</title>
  <meta name="description" content="Portfolio personnel — {{ owner_name }}, développeur / designer" />
  <style>
    :root{--bg:#0f1724;--card:#0b1220;--accent:#06b6d4;--muted:#94a3b8;--glass: rgba(255,255,255,0.03)}
    *{box-sizing:border-box}
    body{margin:0;font-family:Inter,ui-sans-serif,system-ui,-apple-system,'Segoe UI',Roboto,'Helvetica Neue',Arial;color:#e6eef8;background:linear-gradient(180deg,#071126 0%,var(--bg) 100%);-webkit-font-smoothing:antialiased}
    .wrap{max-width:1100px;margin:48px auto;padding:24px}
    header{display:flex;align-items:center;gap:20px;margin-bottom:28px}
    .avatar{width:88px;height:88px;border-radius:14px;background:linear-gradient(135deg,var(--accent),#7c3aed);display:flex;align-items:center;justify-content:center;color:#022;box-shadow:0 6px 18px rgba(2,6,23,0.6);font-weight:700;font-size:28px}
    h1{margin:0;font-size:28px}
    p.lead{color:var(--muted);margin:6px 0 0}
    .grid{display:grid;grid-template-columns:1fr 340px;gap:24px}
    @media (max-width:880px){.grid{grid-template-columns:1fr} .wrap{padding:16px}}

    /* Carte projets */
    .card{background:linear-gradient(180deg,var(--card),rgba(9,12,16,0.6));border-radius:14px;padding:18px;box-shadow:0 8px 30px rgba(2,6,23,0.6)}
    .projects{display:grid;gap:14px}
    .project{display:flex;gap:12px;align-items:flex-start}
    .thumb{width:110px;height:72px;border-radius:10px;background:var(--glass);display:flex;align-items:center;justify-content:center;color:var(--muted);font-size:12px}
    .meta{flex:1}
    .meta h3{margin:0;font-size:16px}
    .meta p{margin:6px 0 0;color:var(--muted);font-size:13px}
    .tags{margin-top:8px;display:flex;flex-wrap:wrap;gap:8px}
    .tag{background:rgba(255,255,255,0.03);padding:6px 8px;border-radius:999px;font-size:12px;color:var(--muted)}

    /* Sidebar */
    aside .card{position:sticky;top:22px}
    .details dt{color:var(--muted);font-size:13px}
    .details dd{margin:6px 0 12px;font-weight:600}
    .contact a{display:inline-block;margin-right:8px;padding:8px 12px;border-radius:10px;background:linear-gradient(90deg,var(--accent),#7c3aed);color:#021124;text-decoration:none;font-weight:700}

    /* Footer */
    footer{margin-top:28px;color:var(--muted);font-size:13px;text-align:center}

    /* Buttons */
    .btn-outline{padding:10px 14px;border:1px solid rgba(255,255,255,0.06);border-radius:10px;color:var(--muted);text-decoration:none;font-weight:600}

    /* Simple animations */
    .project, .card{transition:transform .18s ease,box-shadow .18s ease}
    .project:hover{transform:translateY(-4px)}
  </style>
</head>
<body>
  <div class="wrap">
    <header>
      <div class="avatar">{{ owner_initials }}</div>
      <div>
        <h1>{{ owner_name }} / {{ métier }}</h1>
        <p class="lead">{{ lead_text }}</p>
      </div>
    </header>

    <main class="grid">
      <section>
        <div class="card">
          <h2 style="margin-top:0">Projets récents</h2>
          <div class="projects">
            {% for project in projects %}
            <article class="project">
              <div class="thumb">Image</div>
              <div class="meta">
                <h3>{{ project.title }}</h3>
                <p>{{ project.description }}</p>
                <div class="tags">
                  {% for tag in project.tags %}
                  <span class="tag">{{ tag }}</span>
                  {% endfor %}
                </div>
              </div>
            </article>
            {% endfor %}
          </div>
        </div>

        <div class="card" style="margin-top:16px">
          <h2>À propos</h2>
          <p style="color:var(--muted)">{{ about_text }}</p>
          <p style="margin-top:12px"><a class="btn-outline" href="#contact">Me contacter</a></p>
        </div>
      </section>

      <aside>
        <div class="card">
          <h3>Contact</h3>
          <dl class="details">
            <dt>Email</dt>
            <dd>{{ email }}</dd>
            <dt>Téléphone</dt>
            <dd>{{ phone }}</dd>
            <dt>Localisation</dt>
            <dd>{{ location }}</dd>
          </dl>
          <div class="contact">
            <a href="mailto:{{ email }}">Email</a>
            <a href="#" class="btn-outline">Télécharger CV</a>
          </div>
        </div>

        <div class="card" style="margin-top:14px">
          <h4>Compétences</h4>
          <div style="display:flex;flex-wrap:wrap;gap:8px;margin-top:10px">
            {% for skill in skills %}
            <span class="tag">{{ skill }}</span>
            {% endfor %}
          </div>
        </div>
      </aside>
    </main>

    <footer>
      © {{ ansible_date_time.year }} — {{ owner_name }}. Construit avec ❤.
    </footer>
  </div>
</body>
</html>
